<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="auto_banner">
        <!--title的颜色-->
        <attr name="title_text_color" format="color" />
        <!--文字的大小-->
        <attr name="title_text_size" format="dimension" />
        <!--标题栏的背景颜色-->
        <attr name="rel_bg" format="color" />
        <!--标题栏的高度-->
        <attr name="rel_height" format="dimension" />
        <!--设置indicator的大小单位DP-->
        <attr name="point_size" format="dimension" />
        <!--设置indicator之间的间隔 单位DP-->
        <attr name="point_margin" format="dimension" />
        <!--标题栏的布局方式-->
        <attr name="rel_layout">
            <!--没有文字只有indicator 并且indicator在中间-->
            <enum name="CENTERT" value="0" />
            <!--文字在左边indicator在右边-->
            <enum name="TEXT_LEFT_POINT_RIGHT" value="1" />
            <!--文字在右边，indicator在左边-->
            <enum name="TEXT_RIGHT_POINT_LEFT" value="2" />
        </attr>
        <!--indicator的selector，设置了该属性之后就不用设置point_select 和 point_default属性,如果同时设置的话，取point_selector的取值，建议：使用point_selector-->
        <attr name="point_selector" format="reference" />
        <!--设置滚动的时间间隔 默认为3s-->
        <attr name="scroll_timer" format="integer" />
        <!--图片加载中的占位图-->
        <attr name="load_ing" format="reference" />
        <!--标题栏中内容的左右间隔-->
        <attr name="content_margin" format="dimension" />
        <!--图片下载失败占位图-->
        <attr name="load_fail" format="reference" />
    </declare-styleable>
</resources>